#%Module1.0#####################################################################
##
## Picard modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets Picard variables in your environment"
}

module-whatis   "picard-2.14.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

module load java/8
module load samtools 
prepend-path    PATH           ${iigb_modules}/picard/2.14.1/bin
setenv          PICARD         ${iigb_modules}/picard/2.14.1/lib/picard.jar
setenv          PICARDDIR      ${iigb_modules}/picard/2.14.1/lib
prepend-path    CLASSPATH      ${iigb_modules}/picard/2.14.1/lib


