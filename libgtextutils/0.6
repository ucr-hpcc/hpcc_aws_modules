#%Module1.0#####################################################################
##
## libgtextutils modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tlibgtextutils- Adds libgtextutils to your path"
}

module-whatis   "libgtextutils-0.6"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share


prepend-path    PATH              ${iigb_modules}/libgtextutils/bin
prepend-path    LD_LIBRARY_PATH   ${iigb_modules}/libgtextutils/lib
prepend-path    MANPATH           ${iigb_modules}/libgtextutils/share/man
module          use             ${modules_dir}

